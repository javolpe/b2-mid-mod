<h1><%= "#{@mechanic.name}'s Page" %></h1>
<h3><%= "Years of experience: #{@mechanic.years_experience}" %></h3>
<br><br>

<h2><%= "Rides #{@mechanic.name} is working on that are open:" %></h2>
<% @rides.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>
<br>
<h2>Add a ride to workload by id:</h2>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
  <%= f.label :ride %>
  <%= f.number_field :ride %>
  <%= f.submit "Submit" %>
<% end %>